# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/a3s_admin"

# Supabase (for auth and storage)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# Sentry Error Tracking (optional but recommended for production)
NEXT_PUBLIC_SENTRY_DSN="https://your-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DISABLED="false"  # Set to 'true' to disable Sentry
NEXT_PUBLIC_APP_VERSION="1.0.0"      # For release tracking

# Sentry Source Maps Upload (optional, for production deployments)
SENTRY_AUTH_TOKEN="your_sentry_auth_token"
NEXT_PUBLIC_SENTRY_ORG="your_sentry_organization"
NEXT_PUBLIC_SENTRY_PROJECT="your_sentry_project"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key_here"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key_here"

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/auth/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/auth/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# AI Services
OPENROUTER_API_KEY="sk-or-v1-your_openrouter_api_key_here"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"

# File Storage (Optional - for document uploads)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# Environment
NODE_ENV="development"

# Security
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Optional: Sentry (for error tracking)
# SENTRY_DSN="your_sentry_dsn_here"

# Optional: Analytics
# NEXT_PUBLIC_GA_ID="your_google_analytics_id_here"
